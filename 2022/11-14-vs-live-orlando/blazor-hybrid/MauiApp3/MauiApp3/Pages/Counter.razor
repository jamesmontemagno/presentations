@page "/counter"

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<button class="btn btn-primary"
@onclick="CheckInternet">Check Internet</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void CheckInternet()
    {
        var types = Connectivity.ConnectionProfiles?.FirstOrDefault();

        var hasInternet = Connectivity.NetworkAccess == NetworkAccess.Internet;

        App.Current.MainPage.DisplayAlert("Internet status", $"{types} | has internet: {hasInternet}", "OK");
    }
}
